if alien_color=='green':
    print('green killed, player1 got 5 points!')
else:
    print('others killed, player1 got 10 points!')
    
#5-5
alien_color='green'
if alien_color=='green':
    print('green killed, player1 got 5 points!')
elif alien_color=='yellow':
    print('yellow killed, player1 got 10 points!')
elif alien_color=='red':
    print('red killed, player1 got 15 points!')
else:
    print('others killed, player1 got 10 points!')
    
alien_color='yellow'
if alien_color=='green':
    print('green killed, player1 got 5 points!')
elif alien_color=='yellow':
    print('yellow killed, player1 got 10 points!')
elif alien_color=='red':
    print('red killed, player1 got 15 points!')
else:
    print('others killed, player1 got 10 points!')
    
alien_color='red'

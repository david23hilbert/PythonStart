#7-3
num=input('please input a number:\n')
num=int(num)
if num % 10==0:
    print('it can be divided by 10.')
else:
    print('it can not divided by 10.')
    
#7-4
promote = 'welcome to pizza-hut!'
promote += '\nwhat do you want to order?\n'

order = ''
while order != 'quit':
    order = input(promote)
    if order != 'quit':
        print('you have ordered ' + order)
        

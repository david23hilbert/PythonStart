print('daer '+comming_list[1].title()+' please come to my party!')
print('daer '+comming_list[2].title()+' please come to my party!')
print('daer '+comming_list[3].title()+' please come to my party!')
print('fellows I bought a bigger table for more friends.')
comming_list.insert(0,'lee')
comming_list.insert(2,'petty')
comming_list.append('long')
print('daer '+comming_list[0].title()+' please come to my party!')
print('daer '+comming_list[2].title()+' please come to my party!')
print('daer '+comming_list[-1].title()+' please come to my party!')
print('sorry guys beacause of the delay of the table, we can only have 2 friends for the party.')
a=comming_list.pop()

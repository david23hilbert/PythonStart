#3-8
willing_place=['chengdu','japan','shantou','guangzhou']
print(willing_place)
print(sorted(willing_place))
print(willing_place)
print(sorted(willing_place,reverse=True))
print(willing_place)
willing_place.reverse()
print(willing_place)
willing_place.reverse()
print(willing_place)
willing_place.sort()
print(willing_place)
willing_place.sort(reverse=True)
print(willing_place)

